<% include ../partials/header %>

<div class="container">
  <h1 class="heading-form">Edit <%= campground.name %></h1>

  <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
    <div class="form-group">
     <input class="form-control" type="text" name="campground[name]" value="<%= campground.name %>" required>
    </div>
    <div class="form-group">
     <input class="form-control" type="number" name="campground[price]" value="<%= campground.price %>" min="0.01" step="0.01" required>
    </div>
    <div class="form-group">
      <textarea class="form-control" name="campground[description]"><%= campground.description %></textarea>
    </div>
    <div class="form-group">
      <button class="btn btn-primary btn-lg btn-block">Submit!</button>
    </div>
  </form>

  <a href="/campgrounds">Go Back</a>

</div><!-- main container div -->

<% include ../partials/footer %>
